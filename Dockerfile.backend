# Backend Dockerfile - Multi-stage build for dev and prod
FROM python:3.12-slim AS base

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set work directory
WORKDIR /app

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    pydantic \
    pydantic-settings \
    httpx \
    python-dotenv \
    structlog \
    redis \
    celery \
    aiofiles \
    lightrag-hku \
    python-multipart \
    langchain-openai>=1.0.2 \
    langchain-core>=1.0.4 \
    langchain-ollama>=1.0.0 \
    cryptography>=41.0.0 \
    fastmcp>=2.0.0

# Development stage - includes watchfiles for auto-reload
FROM base AS development

RUN pip install --no-cache-dir watchfiles

# Don't copy source code - it will be mounted as volume
EXPOSE 8000

CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

# Production stage - copies source code into image
FROM base AS production

# Copy source code
COPY src/ ./src/

EXPOSE 8000

CMD ["python", "-m", "src.api.main"]
